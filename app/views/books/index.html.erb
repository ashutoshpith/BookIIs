<%= link_to 'New Book Add', new_book_path %>
<table>
  <tr>
    <th>Books Available in Box</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.bookid %></td>
      <td><%= book.bookname %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
       <td><%= link_to 'Edit', edit_book_path(book) %></td>
         <td><%= link_to 'Destroy', book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>